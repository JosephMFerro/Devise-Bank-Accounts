<h2>Welcome <%= current_user.first_name %></h2>
<hr />

<%= link_to "Add Account", new_account_path %>
<h3>Your Accounts:</h3>
<ul>
<h4 class = "red"><%= @accounts.count <= 0 ? "No Accounts" : "" %></h4>
  <% @accounts.each do |account|%>
    <li>
      <%= account.name %> - $<%= account.balance %>
    </li>
  <% end %>
</ul>
<hr />
<%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "ui button"%>